<main class="main">
    <div class="sign-up">
        <form action="" method="POST" class="form" id="form-1">
            <h1>Đăng Kí</h1>

            <div class="form-group sign-up-item">
                <label for="fullname" class="form-label">Tên Đăng Nhập</label>
                <input id="fullname" name="fullname" type="text" placeholder="Viết liền không dấu">
                <span class="form-message"></span>
            </div>

            <div class="form-group sign-up-item">
                <label for="password" class="form-label">Mật Khẩu</label>
                <input id="password" name="password" placeholder="" type="password">
                <span class="form-message"></span>
            </div>

            <div class="form-group sign-up-item">
                <label for="password_confirmation" class="form-label">Nhập Lại Mật Khẩu</label>
                <input id="password_confirmation" name="password_confirmation" placeholder="" type="password">
                <span class="form-message"></span>
            </div>

            <button class="form-submit">Đăng Kí</button>


        </form>
    </div>

    <script src="./js/Huy/signUp.js"></script>
    <script>
        Validator({
            form: '#form-1',
            rules: [
                Validator.isRequired('#fullname'),
                Validator.isPass('#password'),
                Validator.isConfirmPass('#password_confirmation')
            ]
        });
    </script>
</main>
